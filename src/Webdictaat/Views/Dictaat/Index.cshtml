@model string[]


<h2>Dictaten</h2>


<form asp-controller="Dictaat" asp-action="Create">
    <input type="text" name="name" value="" />
    <button type="submit" class="btn btn-default" >Create</button>
</form>


<table class="table table-striped">
@foreach (string dictaat in Model)
{
    <tr>
        <td>@dictaat</td>
        <td>
            <form asp-controller="Dictaat" asp-action="Delete">
                <input type="text" name="name" value="@dictaat" hidden />
                <button class="btn btn-danger">Delete</button>
            </form>
        </td>
        <td>
            <a class="btn btn-default" asp-action="Detail" asp-route-id="@dictaat">Details</a>
        </td>
    </tr>
}
</table>
